FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 273;
boundaryField
{
    left
    {
        type            fixedValue;
        value           uniform 100;
    }
    right
    {
        type            fixedValue;
        value           uniform 500;
    }
    empty
    {
        type            empty;
    }
}


