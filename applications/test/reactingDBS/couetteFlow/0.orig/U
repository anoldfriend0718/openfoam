FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "(left|right)"
    {
        type            cyclic;
    }


    top
    {
        type            fixedValue;
        value           uniform (0.001 0 0);
    }

    bottom
    {
        type            noSlip;
    }

    frontAndBack
    {
        type            empty;
    }
}

