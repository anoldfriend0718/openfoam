FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      K;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 0 0 0 0 0];

internalField   uniform 1.23457e-07;

boundaryField
{
    velocity-inlet
    {
        type            cyclic;
    }
    velocity-outlet
    {
        type            cyclic;
    }
    fixedWalls
    {
        type            calculated;
        value           uniform 1.23457e-07;
    }
    frontAndBack
    {
        type            empty;
    }
}


