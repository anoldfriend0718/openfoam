FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    "coke.*"
    {
        solver          diagonal;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          0.01;
    }

    // p_rgh
    // {
    //     solver          GAMG;
    //     smoother        DIC;
    //     tolerance       1e-6;
    //     relTol          0.01;
    //     maxIter          20;
    // }

    p_rghFinal
    {
        $p_rgh;
        tolerance       1e-8;
        relTol          0;
    }

    // "(U|h|e|Y.*)"
    // {
    //     solver          PBiCGStab;
    //     preconditioner  DILU;
    //     tolerance       1e-6;
    //     relTol          0.01;
    // }

    // "(U|h|e|Y.*)Final"
    // {
    //     $U;
    //     tolerance       1e-8;
    //     relTol          0;
    // }

    "(h|e)"
    {
        // solver          PCG;
        // preconditioner  DIC;
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }

    "(h|e)Final"
    {
        $h;
        tolerance       1e-8;
        relTol          0;
    }

    "(U|Y.*|O2|CO2)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }

    "(U||Y.*|O2|CO2)Final"
    {
        $U;
        tolerance       1e-8;
        relTol          0;
    }

}

