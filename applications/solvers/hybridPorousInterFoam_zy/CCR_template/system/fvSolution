PIMPLE
{
    momentumPredictor no;
    nNonOrthogonalCorrectors 0;
    nCorrectors       2;
    nOuterCorrectors  15;

    outerCorrectorResidualControl
    {
        p   
        {
            tolerance  1e-7;
            relTol     0;
        }

    }

}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
